{
    "root": "true",
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:node/recommended"
    ],
    "env": {
        "node": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "prettier/prettier": "error",
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
    },
    "ignorePatterns": ["node_modules/"]
}
